@model List<Book>

<h1 class="alert alert-success">Book Home</h1>

<a asp-controller="Books" asp-action="GetCreateView" class="btn btn-success mb-1">Create New</a>

@if (Model.Count > 0)
{
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr><th>Id</th><th>Full Name</th><th>Position</th><th>Salary</th><th>Price</th><th>Count</th></tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.EducationYear.Name</td>
                    <td>@item.Publisher.Name</td>
                    <td>@item.Subject.Name</td>
                    <td>@item.Price</td>
                    <td>@item.count</td>
                    <td>
                        <a asp-controller="Books" asp-action="GetDetailsView" asp-route-id="@item.Id" class="btn btn-outline-warning"><i class="bi bi-list-ul"></i></a>
                        <a asp-controller="Books" asp-action="GetEditView" asp-route-id="@item.Id" class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Books" asp-action="GetDeleteView" asp-route-id="@item.Id" class="btn btn-outline-success"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1 class="alert alert-danger text-center">There is no books to display.</h1>
}


