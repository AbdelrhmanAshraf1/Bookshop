@model EducationYear

<h1 class="alert alert-danger">Are you sure you want to delete Education Year</h1>

@{
    EducationYear educationYear = (EducationYear)ViewBag.CurrentDept;
}

<div>
    <dl class="col-6 row">
        <dt class="col-2">@Html.DisplayNameFor(d => educationYear.Id)</dt>
        <dd class="col-10">@Html.DisplayFor(d => educationYear.Id) | @Model.Id</dd>
        <dt class="col-2">@Html.DisplayNameFor(d => educationYear.Name)</dt>
        <dd class="col-10">@Html.DisplayFor(d => educationYear.Name) | | @Model.Name</dd>
    </dl>
</div>

<form method="post" asp-controller="EducationYears" asp-action="DeleteCurrent">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a asp-controller="EducationYears" asp-action="GetHomeView">Back to List</a>

