@model Publisher
<h1 class="alert alert-success text-center">Create Publisher</h1>

<div class="row">
    <form class="col-4" method="post" asp-controller="Publishers" asp-action="AddNew"  enctype="multipart/form-data">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@

        <div>
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="ImagePath"></label>
            <input type="file" name="imageFormFile" id="imageFormFile" accept=".png , .jpg" class="form-control" onchange="SetImgSrc()" />
        </div>

        <button type="submit" class="btn btn-primary mt-2">Add</button>
    </form>

    <img src="" id="PubImage" class="col-4 card" style="object-fit:contain" />

</div>

<a asp-controller="Publisher" asp-action="GetHomeView">Back to Publisher Home</a>

@section Scripts{
    <script>
        function SetImgSrc() {
            // var imageFormFileFirstFile = document.getElementById("imageFormFile").files[0];
            // var imageFormFileUrl = window.URL.createObjectURL(imageFormFileFirstFile);
            // document.getElementById("deptImage").src = imageFormFileUrl;
            document.getElementById("PubImage").src = window.URL.createObjectURL(document.getElementById("imageFormFile").files[0]);
        }
    </script>
}

